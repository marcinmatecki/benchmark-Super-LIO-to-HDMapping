<launch>

  <arg name="rviz" default="true" />

  <rosparam file="$(find super_lio)/config/relocation.yaml" command="load"/>

  <!-- Launch Nodes -->
  <node pkg="super_lio" type="relocation_node" name="relocation_node" output="screen"/>

  <!-- Optional RViz -->
  <group if="$(arg rviz)">
		<node pkg="rviz" type="rviz" name="rviz" args="-d $(find super_lio)/rviz/relocation.rviz" />
	</group>
  
</launch>